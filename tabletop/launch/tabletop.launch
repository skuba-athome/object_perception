<launch>
	<!-- This launch file starts, segmentation, recognition. and the database communication node. -->


	<arg name="tabletop_segmentation_points_input" default="camera/depth/points" />

	<!-- table segmentation -->
	<include file="$(find tabletop)/launch/tabletop_segmentation.launch">
	  <arg name="tabletop_segmentation_points_in" value="$(arg tabletop_segmentation_points_input)" />
	</include>

	<!-- object detection -->
	<include file="$(find tabletop)/launch/tabletop_object_detection.launch"> 
	</include>

    <!-- object recognition -->

	<!--include file="$(find object_recognition)/launch/object_recognition.launch" /-->  

    <node pkg="object_recognition" type="recognizeObject.py" name="objectRecognition" output="screen">
        <param name="k_neighbors" value="35"/>
        <param name="feature_directory" value="$(find object_recognition)/learn/Features"/>
        <param name="object_root_dir" value="$(find object_recognition)/data"/>
        <param name="object_image_dir" value="$(find tabletop)/out"/>
    </node>

</launch>
